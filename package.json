    "jest": "^27.1.0",
    "pkg": "^5.3.2",
    "prettier": "2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "dependencies": {
